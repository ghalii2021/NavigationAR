<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Vue AR (camÃ©ra + scÃ¨ne 3D) -->
    <com.google.ar.sceneform.ArSceneView
        android:id="@+id/arSceneView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Overlay supÃ©rieur : Instructions avec icÃ´ne -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#1E88E5"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- IcÃ´ne de manÅ“uvre (grande) -->
            <TextView
                android:id="@+id/tvManeuverIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="â¬†ï¸"
                android:textSize="56sp"
                android:gravity="center"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:backgroundTint="#FFFFFF"
                android:layout_marginEnd="16dp" />

            <!-- Texte d'instruction et distance -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Instruction principale -->
                <TextView
                    android:id="@+id/tvInstruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continuez tout droit"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Distance jusqu'au prochain virage -->
                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Dans 50 m"
                    android:textColor="#E3F2FD"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Panneau d'informations de trajet (bas) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTripInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#263238"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <!-- Distance restante -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textColor="#90CAF9"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvRemainingDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.2 km"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- SÃ©parateur vertical -->
            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#455A64"
                android:layout_marginHorizontal="16dp" />

            <!-- Temps restant -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temps"
                    android:textColor="#90CAF9"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvRemainingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 min"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- SÃ©parateur vertical -->
            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#455A64"
                android:layout_marginHorizontal="16dp" />

            <!-- Heure d'arrivÃ©e -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ArrivÃ©e"
                    android:textColor="#90CAF9"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvArrivalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:30"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Status en haut Ã  droite -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:padding="8dp"
        android:text="Initialisation..."
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Boutons d'action en bas -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Bouton Recentrer -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnRecenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:contentDescription="Recentrer la route"
            android:src="@android:drawable/ic_menu_mylocation"
            app:backgroundTint="#4CAF50"
            app:tint="@android:color/white" />

        <!-- Bouton Quitter -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Quitter la navigation"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:backgroundTint="#F44336"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Aide contextuelle (optionnelle) -->
    <TextView
        android:id="@+id/tvHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:padding="12dp"
        android:text="ðŸ’¡ Suivez les flÃ¨ches 3D bleues
et jaunes sur la route"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/cardTripInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="NotSibling" />

</androidx.constraintlayout.widget.ConstraintLayout>
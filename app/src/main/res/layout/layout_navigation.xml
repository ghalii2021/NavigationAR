<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Carte -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/navigationPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Panneau de navigation en temps réel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/navigationPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:visibility="gone"
        app:cardBackgroundColor="#1E88E5"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Prochaine instruction -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvManeuverIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:drawable/ic_menu_compass"
                    android:gravity="center"
                    android:text="➡️"
                    android:textSize="32sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvNextInstruction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tournez à droite"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDistanceToNext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Dans 500 m"
                        android:textColor="#E3F2FD"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Informations du trajet -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <!-- Distance restante -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance restante"
                        android:textColor="#E3F2FD"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tvRemainingDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45 km"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Temps restant -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temps restant"
                        android:textColor="#E3F2FD"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tvRemainingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35 min"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Heure d'arrivée -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arrivée estimée"
                        android:textColor="#E3F2FD"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tvArrivalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:30"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Bouton arrêter -->
                <ImageButton
                    android:id="@+id/btnStopNavigation"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="@android:color/white"
                    android:contentDescription="Arrêter la navigation" />
            </LinearLayout>

            <!-- Barre de progression -->
            <ProgressBar
                android:id="@+id/progressNavigation"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="12dp"
                android:progress="35"
                android:progressTint="#4CAF50" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Boutons flottants -->
    <Button
        android:id="@+id/btnMapType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#2196F3"
        android:drawableLeft="@android:drawable/ic_menu_mapmode"
        android:drawablePadding="8dp"
        android:elevation="6dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Normal"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabStartNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Démarrer navigation"
        android:src="@android:drawable/ic_media_play"
        app:backgroundTint="#4CAF50"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/fabRoute"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Calculer itinéraire"
        android:src="@android:drawable/ic_menu_directions"
        app:backgroundTint="#FF9800"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/fabMyLocation"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Ma position"
        android:src="@android:drawable/ic_menu_mylocation"
        app:backgroundTint="#4CAF50"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/fabClearMarkers"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabClearMarkers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Effacer les marqueurs"
        android:src="@android:drawable/ic_menu_delete"
        app:backgroundTint="#F44336"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/navigationPanel"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>